  </div>
  <div class="name_of_poster"><%= link_to "@#{message.user.username}", user_url(message.user) %>&nbsp;<%= display_mention_info_for(message) %></div>
  <span><%= auto_markup message.content %></span>
  <span class="date_of_post">â€“&nbsp;<%= time_ago_in_words message.created_at %> ago</span>
<%- end -%>
